<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>Yuva fasions</title>
        <!-- Mobile Specific Metas -->
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
        <!-- Font-->
        <link rel="stylesheet" type="text/css" href="/user/signup/css/nunito-font.css" />
        <!-- Main Style Css -->
        <link rel="stylesheet" href="/user/signup/css/style.css" />
    </head>
    <body class="form-v6" style="scale: 0.8;">
        <div class="page-content">
            <div class="form-v6-content">
                <div class="form-left">
                    <h1 style="color: black; margin-top: 140px; margin-left: 40px;">KEEP TRAVEL WITH TREND</STYle></h1>
                    <img src="/user/signup/images/malefasion.jpg" alt="form"  style="margin-top: 20px !important;"/>
                </div>
                <div id="error"></div>
                <form class="form-detail" action="/signup" method="post" id="form">
                    <div class="form-top">
                        <img src="/user/signup/images/yuvafasions.png" alt="logo" />
                    </div>
                    <h2>Sign Up</h2>
                    <div class="form-row">
                        <input type="text" id="fullname" name="fullname" class="input-text" placeholder="Your Name" required />
                    </div>
                    <div class="form-row">
                        <input
                            type="text"
                            id="email"
                            name="email"
                            class="input-text"
                            placeholder="Email Address"
                            required
                            pattern="[^@]+@[^@]+.[a-zA-Z]{2,6}"
                        />
                    </div>
                    <div class="form-row">
                        <input type="number" id="mobilenumber" name="mobilenumber" class="input-text" placeholder="mobile number" required />
                    </div>

                    <div class="form-row">
                        <input type="password" id="password" name="password" class="input-text" placeholder="Password" required />
                    </div>
                    <div class="form-row">
                        <input
                            type="password"
                            id="confirmpassword"
                            name="confirmpassword"
                            class="input-text"
                            placeholder="Comfirm Password"
                            required
                        />
                    </div>
                    <div class="form-row-last">
                        <input type="submit" class="register" />
                    </div>
                </form>
            </div>
        </div>
    </body>
    <!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>

<script>
    const form = document.getElementById('form')
    const fullname = document.getElementById('fullname')
    const email = document.getElementById('email')
    const mobile = document.getElementById('mobilenumber')
    const password = document.getElementById('password')
    const confirmpassword = document.getElementById('confirmpassword')
    const errorElement = document.getElementById('error')

    form.addEventListener('submit', (element)=>{

        let message = []

        if(fullname.value === ''||fullname.value === null){
            message.push('name is required')
        }
        if (email === ''||email !== email){
            message.push('this is not an email')
        }
        if(mobile.value.length !== 10||mobile.value === null){
            message.push('enter mobile number')
        }
        if(password.value.length<=8||password.value === null){
            message.push('enter proper password')
        }
        if(confirmpassword.value !== password.value||confirmpassword.value === null){
            message.push('enter same password')
        }
        if(message.length>0){
            element.preventDefault()
            errorElement.innerText.message.join(', ')
        }
    })
</script>